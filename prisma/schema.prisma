generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CinemaHall {
  id                Int               @id @default(autoincrement())
  description       String
  name              String
  photos            CinemaHallPhoto[]
  type              String
  capacity          Int
  hasDisabledAccess Boolean           @default(false)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}

model CinemaHallPhoto {
  id           Int        @id @default(autoincrement())
  url          String
  cinemaHallId Int
  cinemaHall   CinemaHall @relation(fields: [cinemaHallId], references: [id])
}
